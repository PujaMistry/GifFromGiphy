<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_layout_background"
    android:padding="20dp">

    <ImageView
        android:id="@+id/dialog_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/dialog_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CustomTextViewBold"
        android:text="@string/dialog_lable"
        android:layout_below="@+id/dialog_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <RatingBar
        android:id="@+id/dialog_ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/dialog_layout_line"
        android:layout_centerHorizontal="true" />

    <View
        android:id="@+id/dialog_layout_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/dialog_label"
        android:layout_marginTop="10dp"
        android:background="@color/ColorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_ratingbar"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_btn_submit_label"
            android:background="@drawable/button_background"
            android:textColor="@android:color/white"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/dialog_btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_btn_close_label"
            android:background="@drawable/button_background"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>
